@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Logo)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var cinema in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Name" style="max-width:150px" />
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => cinema.Name)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => cinema.Description)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@cinema.ID"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@cinema.ID"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@cinema.ID"><i class="bi bi-trash"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="text-white" style="position:fixed;right:25px;bottom:25px;">
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New </a>
</div>